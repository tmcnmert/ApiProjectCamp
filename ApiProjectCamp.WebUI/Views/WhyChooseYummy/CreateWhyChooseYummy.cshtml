@model CreateWhyChooseYummyDto
@{
    ViewData["Title"] = "CreateWhyChooseYummy";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .modern-form-card {
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
        background: white;
    }

    .form-header {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        padding: 2rem;
        color: white;
        border-bottom: none;
    }

        .form-header h4 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: white;
        }

        .form-header p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
            font-size: 0.95rem;
        }

    .modern-form-body {
        padding: 2.5rem;
    }

    .form-group-modern {
        margin-bottom: 1.75rem;
        position: relative;
    }

    .form-label-modern {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
    }

        .form-label-modern i {
            color: #38f9d7;
            font-size: 1rem;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f0fdf9 0%, #e6fcf5 100%);
            border-radius: 6px;
        }

    .form-control-modern {
        border: 2px solid #e6fcf5;
        border-radius: 12px;
        padding: 0.9rem 1.2rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f0fdf9;
    }

        .form-control-modern:focus {
            border-color: #38f9d7;
            box-shadow: 0 0 0 4px rgba(56, 249, 215, 0.1);
            background: white;
            outline: none;
        }

        .form-control-modern:hover {
            border-color: #38f9d7;
            background: white;
        }

    textarea.form-control-modern {
        min-height: 140px;
        resize: vertical;
    }

    .btn-submit-modern {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(56, 249, 215, 0.4);
        cursor: pointer;
        width: 100%;
        justify-content: center;
    }

        .btn-submit-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(56, 249, 215, 0.5);
        }

        .btn-submit-modern:active {
            transform: translateY(-1px);
        }

    .btn-cancel-modern {
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(127, 140, 141, 0.3);
        cursor: pointer;
        text-decoration: none;
        justify-content: center;
    }

        .btn-cancel-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(127, 140, 141, 0.4);
            color: white;
            text-decoration: none;
        }

    .form-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 2rem;
    }

    .required-star {
        color: #e74c3c;
        margin-left: 0.25rem;
    }

    .form-hint {
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

        .form-hint i {
            color: #38f9d7;
        }

    .icon-preview {
        margin-top: 0.75rem;
        padding: 1rem;
        background: linear-gradient(135deg, #f0fdf9 0%, #e6fcf5 100%);
        border-radius: 10px;
        display: none;
        align-items: center;
        gap: 0.75rem;
        border: 2px dashed #38f9d7;
    }

        .icon-preview.active {
            display: flex;
        }

        .icon-preview i {
            font-size: 2rem;
            color: #38f9d7;
        }

        .icon-preview span {
            color: #2c3e50;
            font-weight: 600;
        }

    @@media (max-width: 768px) {
        .modern-form-body

    {
        padding: 1.5rem;
    }

    .form-header {
        padding: 1.5rem;
    }

        .form-header h4 {
            font-size: 1.4rem;
        }

    .form-actions {
        grid-template-columns: 1fr;
    }

    }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .modern-form-card {
        animation: slideIn 0.5s ease-out;
    }
</style>

<section class="section">
    <div class="section-body">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card modern-form-card">
                    <div class="form-header">
                        <h4>
                            <i class="fas fa-star"></i>
                            Yeni "Neden Biz" Özelliği Ekle
                        </h4>
                        <p>Müşterilerinize markanızı seçmeleri için güçlü nedenler sunun</p>
                    </div>
                    <div class="modern-form-body">
                        <form method="post">
                            <div class="form-group-modern">
                                <label class="form-label-modern">
                                    <i class="fas fa-heading"></i>
                                    Başlık
                                    <span class="required-star">*</span>
                                </label>
                                <input type="text" asp-for="Title" class="form-control form-control-modern" placeholder="Örn: Hızlı Teslimat, Taze Malzemeler" required />
                                <div class="form-hint">
                                    <i class="fas fa-info-circle"></i>
                                    Özelliğinizi en iyi tanımlayan kısa ve öz bir başlık yazın
                                </div>
                            </div>

                            <div class="form-group-modern">
                                <label class="form-label-modern">
                                    <i class="fas fa-align-left"></i>
                                    Açıklama
                                    <span class="required-star">*</span>
                                </label>
                                <textarea asp-for="Description" class="form-control form-control-modern" placeholder="Bu özelliğin detaylı açıklamasını buraya yazın..." rows="5" required></textarea>
                                <div class="form-hint">
                                    <i class="fas fa-info-circle"></i>
                                    Özelliğin müşterilerinize sağladığı faydaları detaylı bir şekilde açıklayın
                                </div>
                            </div>

                            <div class="form-group-modern">
                                <label class="form-label-modern">
                                    <i class="fas fa-icons"></i>
                                    İkon URL
                                    <span class="required-star">*</span>
                                </label>
                                <input type="text" asp-for="IconUrl" class="form-control form-control-modern" placeholder="fas fa-rocket, fas fa-leaf, fas fa-clock" id="iconInput" required />
                                <div class="form-hint">
                                    <i class="fas fa-info-circle"></i>
                                    FontAwesome ikon sınıfını girin (Örn: fas fa-star, fas fa-heart)
                                </div>
                                <div class="icon-preview" id="iconPreview">
                                    <i class="fas fa-star"></i>
                                    <span>İkon Önizleme</span>
                                </div>
                            </div>

                            <div class="form-actions">
                                <a href="/WhyChooseYummy/WhyChooseYummyList" class="btn-cancel-modern">
                                    <i class="fas fa-times"></i>
                                    İptal
                                </a>
                                <button type="submit" class="btn-submit-modern">
                                    <i class="fas fa-plus"></i>
                                    Özelliği Ekle
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // İkon önizleme
    document.getElementById('iconInput').addEventListener('input', function(e) {
        const iconValue = e.target.value.trim();
        const preview = document.getElementById('iconPreview');
        const iconElement = preview.querySelector('i');

        if(iconValue) {
            iconElement.className = iconValue;
            preview.classList.add('active');
        } else {
            preview.classList.remove('active');
        }
    });
</script>