@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .modern-card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        border: none;
    }

    .modern-form-group {
        margin-bottom: 1.5rem;
    }

    .modern-label {
        color: #667eea;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
        display: block;
    }

    .modern-input,
    .modern-textarea {
        border-radius: 10px;
        border: 2px solid #e8ecff;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .modern-input:focus,
        .modern-textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background-color: #f8f9ff;
        }

        .modern-input:hover,
        .modern-textarea:hover {
            border-color: #667eea;
        }

    .modern-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .modern-btn {
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .modern-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-submit {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .btn-cancel {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .form-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #f8f9ff 0%, #e8ecff 100%);
        border-bottom: 2px solid #667eea;
        border-radius: 15px 15px 0 0;
        padding: 1.5rem;
    }

    .card-body-custom {
        padding: 2rem;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper i {
            position: absolute;
            left: 1rem;
            top: 1rem;
            color: #667eea;
            font-size: 1.1rem;
        }

        .input-icon-wrapper .modern-input,
        .input-icon-wrapper .modern-textarea {
            padding-left: 3rem;
        }

    .form-section {
        background: #f8f9ff;
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        border-left: 4px solid #667eea;
    }

    .section-title {
        color: #667eea;
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .field-hint {
        font-size: 0.75rem;
        color: #999;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto">
                <div class="card modern-card">
                    <div class="card-header card-header-custom">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div class="form-icon">
                                <i class="fas fa-star"></i>
                            </div>
                            <div>
                                <h4 style="color: #667eea; font-weight: 700; margin: 0;">
                                    Yeni Öne Çıkan Alan Ekleme
                                </h4>
                                <p style="color: #999; font-size: 0.875rem; margin: 0.25rem 0 0 0;">
                                    Öne çıkan içerik bilgilerini girin
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body card-body-custom">
                        <form method="post">
                            <!-- Temel Bilgiler -->
                            <div class="form-section">
                                <div class="section-title">
                                    <i class="fas fa-align-left"></i>
                                    Temel Bilgiler
                                </div>

                                <div class="modern-form-group">
                                    <label class="modern-label">
                                        <i class="fas fa-heading" style="margin-right: 5px;"></i>
                                        Başlık
                                    </label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-font"></i>
                                        <input type="text"
                                               asp-for="Title"
                                               class="modern-input"
                                               placeholder="Ana başlık giriniz..."
                                               required />
                                    </div>
                                    <span class="field-hint">Öne çıkan alanın ana başlığı</span>
                                </div>

                                <div class="modern-form-group">
                                    <label class="modern-label">
                                        <i class="fas fa-quote-left" style="margin-right: 5px;"></i>
                                        Alt Başlık
                                    </label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-text-height"></i>
                                        <input type="text"
                                               asp-for="SubTitle"
                                               class="modern-input"
                                               placeholder="Alt başlık giriniz..."
                                               required />
                                    </div>
                                    <span class="field-hint">Başlığı destekleyen alt başlık metni</span>
                                </div>

                                <div class="modern-form-group">
                                    <label class="modern-label">
                                        <i class="fas fa-file-alt" style="margin-right: 5px;"></i>
                                        Açıklama
                                    </label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-paragraph"></i>
                                        <textarea asp-for="Description"
                                                  class="modern-textarea"
                                                  rows="4"
                                                  placeholder="Detaylı açıklama giriniz..."
                                                  required></textarea>
                                    </div>
                                    <span class="field-hint">Öne çıkan alanın detaylı açıklaması</span>
                                </div>
                            </div>

                            <!-- Medya Ayarları -->
                            <div class="form-section">
                                <div class="section-title">
                                    <i class="fas fa-photo-video"></i>
                                    Medya Ayarları
                                </div>

                                <div class="modern-form-group">
                                    <label class="modern-label">
                                        <i class="fas fa-image" style="margin-right: 5px;"></i>
                                        Görsel URL
                                    </label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-link"></i>
                                        <input type="url"
                                               asp-for="ImageUrl"
                                               class="modern-input"
                                               placeholder="https://example.com/image.jpg"
                                               required />
                                    </div>
                                    <span class="field-hint">Görsel bağlantısı (JPG, PNG formatında)</span>
                                </div>

                                <div class="modern-form-group">
                                    <label class="modern-label">
                                        <i class="fas fa-video" style="margin-right: 5px;"></i>
                                        Video URL (Embed Link)
                                    </label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-code"></i>
                                        <input type="url"
                                               asp-for="VideoUrl"
                                               class="modern-input"
                                               placeholder="https://www.youtube.com/embed/VIDEO_ID" />
                                    </div>
                                    <span class="field-hint">YouTube veya Vimeo embed URL'i (İsteğe bağlı)</span>
                                </div>
                            </div>

                            <div class="button-group">
                                <button type="submit" class="modern-btn btn-submit">
                                    <i class="fas fa-check-circle"></i>
                                    Feature Ekle
                                </button>
                                <a href="/Feature/FeatureList/" class="modern-btn btn-cancel">
                                    <i class="fas fa-times-circle"></i>
                                    İptal
                                </a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer" style="background: white; border-top: 2px solid #f0f0f0; padding: 1rem 2rem;">
                        <div style="color: #999; font-size: 0.875rem;">
                            <i class="fas fa-info-circle"></i>
                            Tüm zorunlu alanları doldurun. Video URL isteğe bağlıdır.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>