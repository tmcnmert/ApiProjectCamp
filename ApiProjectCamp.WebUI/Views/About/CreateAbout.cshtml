@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <br />
                            <label>Rezervasyon Numarası</label>
                            <input type="text" asp-for="ReservartionNumber" class="form-control" />
                            <br />
                            <label>Görsel URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Video Kapak Görseli</label>
                            <input type="text" asp-for="VideoCoverImageUrl" class="form-control" />
                            <br />
                            <label>Video URL(Embed olarak)</label>
                            <input type="text" asp-for="VideoImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Hakkımda Alanı Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
